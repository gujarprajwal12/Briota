<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen2dp"
        android:layout_marginTop="@dimen/dimen5dp"
        android:layout_marginRight="@dimen/dimen2dp"
        android:layout_marginBottom="@dimen/dimen5dp"
        app:cardCornerRadius="@dimen/dimen10dp"
        app:cardElevation="@dimen/dimen2dp"
        android:id="@+id/green_card"
        app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimen5dp">


                    <TextView
                        android:id="@+id/medHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:layout_toRightOf="@id/green_med_icon"
                        android:text="@string/your_daily_medications"
                        android:textColor="@color/TextBlue"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10dp">

                    <TextView
                        android:id="@+id/green_med_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medicine Name:"
                        android:textColor="@color/TextBlue"
                        android:paddingLeft="@dimen/dimen5dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/med_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:layout_toRightOf="@id/green_med_name"
                        android:gravity="center"
                        android:text="Leukotriene Modifiers"
                        android:textColor="@color/Textblack" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10dp">

                    <TextView
                        android:id="@+id/green_med_puffs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of Puffs:"
                        android:textColor="@color/TextBlue"
                        android:paddingLeft="@dimen/dimen5dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/med_puffs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:layout_toRightOf="@id/green_med_puffs"
                        android:text="3"
                        android:textColor="@color/Textblack"
                        android:gravity="center"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10dp">

                    <TextView
                        android:id="@+id/green_med_take"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="When to take:"
                        android:textColor="@color/TextBlue"
                        android:paddingLeft="@dimen/dimen5dp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/green_med_take"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/dimen2dp">

                        <TextView
                            android:id="@+id/med_take_morning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text=""
                            android:textColor="@color/Textblack" />

                        <TextView
                            android:id="@+id/med_take_afternoon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@id/med_take_morning"
                            android:text=""
                            android:textColor="@color/Textblack" />


                        <TextView
                            android:id="@+id/med_take_evening"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@id/med_take_afternoon"
                            android:text=""
                            android:textColor="@color/Textblack" />

                        <TextView
                            android:id="@+id/med_take_night"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@id/med_take_evening"
                            android:text=""
                            android:inputType="textImeMultiLine"
                            android:textColor="@color/Textblack" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>