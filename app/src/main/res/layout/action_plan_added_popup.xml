<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen15dp"
        android:layout_marginLeft="@dimen/dimen10dp"
        android:layout_marginRight="@dimen/dimen10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen10dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/thums_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/thumbs_up"
                android:layout_marginTop="@dimen/dimen10dp"/>

            <TextView
                android:id="@+id/txt_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen30dp"
                android:textColor="@color/Textblack"
                android:textStyle="bold"
                android:textSize="@dimen/Text"
                android:gravity="center_horizontal"
                android:text="@string/your_action_plan_is_added_sucussesfully"/>

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen45dp"
                android:background="@drawable/buttonshape"
                android:layout_marginTop="@dimen/dimen20dp"
                android:text="@string/ok1"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>