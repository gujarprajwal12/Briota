<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen15dp"
        >

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="@dimen/dimen80dp"
                android:layout_gravity="center"
                android:layout_width="138dp"
                android:layout_height="138dp"
                android:src="@drawable/thumpsup" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen10dp"
                android:gravity="center"
                android:text="@string/YourActionReminderAddedSucussesfully"
                android:textColor="@color/Textblack"
                android:textSize="@dimen/Text" />



            <Button
                android:id="@+id/btnareminder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen45dp"
                android:layout_marginTop="@dimen/dimen50dp"
                android:background="@drawable/buttonshape"
                android:text="@string/ok1"
                android:layout_marginLeft="@dimen/dimen5dp"
                android:layout_marginRight="@dimen/dimen5dp"
                android:textAllCaps="false"
                android:backgroundTint="@color/Button_Background"
                android:textColor="@color/white" />





        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>