        <TextView
            android:id="@+id/txt_Welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="@dimen/dimen10dp"
            android:gravity="center|top"
            android:text="@string/welcome"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/Headline_Black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10dp"
            android:gravity="center"
            android:text="@string/please_provide_the_details_for"
            android:textColor="@color/Textblack"
            android:textSize="@dimen/Text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen5dp"
            android:gravity="center"
            android:text="@string/your_new_account"
            android:textColor="@color/Textblack"
            android:textSize="@dimen/Text" />

    </LinearLayout>




    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen15dp"
        android:layout_marginRight="@dimen/dimen15dp"
