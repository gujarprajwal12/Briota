        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleTint="@color/TextBlue"
            app:passwordToggleEnabled="true"
            android:textColorHint="@color/TextBlue"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/editPasswordsignup"
                android:drawableStart="@drawable/customlock"
                android:drawablePadding="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen51dp"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_marginBottom="@dimen/dimen10dp"
                android:background="@drawable/edit_text_selector"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dimen15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/Placeholder" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleTint="@color/TextBlue"
            app:passwordToggleEnabled="true"
            android:textColorHint="@color/TextBlue"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/editConfirmPasswordsignup"
                android:drawableStart="@drawable/customlock"
                android:drawablePadding="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen51dp"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_marginBottom="@dimen/dimen10dp"
                android:background="@drawable/edit_text_selector"
                android:hint="@string/confrirm_password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dimen15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/Placeholder" />

        </com.google.android.material.textfield.TextInputLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/signup_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen10dp"
                android:buttonTint="@color/TextBlue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/Textblack"
                    android:text="@string/by_creating_your_account_you_agree_with_to"
                    android:textSize="@dimen/Text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/TextBlue"
                    android:text="@string/terms_conditions"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/butSignUp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen45dp"
            android:layout_marginBottom="@dimen/dimen20dp"
            android:layout_marginTop="@dimen/dimen10dp"
            android:background="@drawable/buttonshape"
            android:text="@string/bsign_up"
            android:layout_marginLeft="@dimen/dimen5dp"
            android:layout_marginRight="@dimen/dimen5dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/Button_Background"
            android:textColor="@color/white" />









