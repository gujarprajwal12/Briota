<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingRight="@dimen/dimen5dp"
    android:paddingLeft="@dimen/dimen5dp"
    tools:context=".Front_End.UI.DailyZoneMysymptomsActivity">



    <include layout="@layout/toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen2dp"
        android:background="@color/divider"
        android:backgroundTint="@color/divider"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen10dp"
            android:paddingTop="@dimen/dimen10dp"
            android:paddingRight="@dimen/dimen10dp"
            android:paddingBottom="@dimen/dimen10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:text="@string/my_symptoms"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/HeadingText"
                android:visibility="gone"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:text="@string/Select_one_of_the_following"
                android:textColor="@color/black"
                android:textSize="@dimen/Text" />



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen5dp"
                android:layout_marginTop="@dimen/dimen20dp"
                android:layout_marginRight="@dimen/dimen5dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="@dimen/dimen15dp"
                app:cardCornerRadius="@dimen/dimen10dp"
                android:padding="@dimen/dimen20dp"
                android:id="@+id/green_card1">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_card_border"
                    android:padding="@dimen/dimen10dp">

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:layout_marginBottom="@dimen/dimen5dp"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/DoingWell"
                        android:layout_marginBottom="@dimen/dimen5dp"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/TextBlue"
                        android:textSize="@dimen/Text"
                        android:textStyle="bold"/>





                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen5dp"
                        android:text="@string/no_cough_wheeze_chest_tightness_or_shortness_of_breath"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:drawableStart="@drawable/ic_baseline_brightness_1_24"
                        android:drawablePadding="@dimen/dimen5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/TextBlue"
                        android:textSize="@dimen/Text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/can_do_usual_activities"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:layout_marginBottom="@dimen/dimen5dp"
                        android:drawableStart="@drawable/ic_baseline_brightness_1_24"
                        android:drawablePadding="@dimen/dimen5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/TextBlue"
                        android:textSize="@dimen/Text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/slept_well"
                        android:layout_marginBottom="@dimen/dimen5dp"
                        android:drawableStart="@drawable/ic_baseline_brightness_1_24"
                        android:drawablePadding="@dimen/dimen5dp"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/TextBlue"
                        android:textSize="@dimen/Text" />


                </LinearLayout>
                </FrameLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/yellow_card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen5dp"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_marginRight="@dimen/dimen5dp"
                android:layout_marginBottom="@dimen/dimen10dp"
                android:padding="@dimen/dimen20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dimen10dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yellow_card_border"
                    android:padding="@dimen/dimen10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:layout_marginBottom="@dimen/dimen5dp"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/FeelingWorse"
                        android:layout_marginBottom="@dimen/dimen5dp"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/TextBlue"
                        android:textSize="@dimen/Text"
                        android:textStyle="bold"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen5dp"
                        android:text="@string/cough_wheeze_chest_tightness_or_shortness_of_breath"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:drawableStart="@drawable/ic_baseline_brightness_1_24"
                        android:drawablePadding="@dimen/dimen5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/TextBlue"
                        android:textSize="@dimen/Text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen5dp"
                        android:text="@string/can_do_some_but_not_all_usual_activities"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:drawableStart="@drawable/ic_baseline_brightness_1_24"
                        android:drawablePadding="@dimen/dimen5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/TextBlue"
                        android:textSize="@dimen/Text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen5dp"
                        android:drawableStart="@drawable/ic_baseline_brightness_1_24"
                        android:drawablePadding="@dimen/dimen5dp"
                        android:text="@string/sleep_was_disturbed_due_to_asthma_copd"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/TextBlue"
                        android:textSize="@dimen/Text" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen5dp"
                        android:text="@string/increased_temperature_phlegm_or_change_in_phlegm_colour_odour_thickness"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:drawableStart="@drawable/ic_baseline_brightness_1_24"
                        android:drawablePadding="@dimen/dimen5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/TextBlue"
                        android:textSize="@dimen/Text" />



                </LinearLayout>
                </FrameLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen5dp"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_marginRight="@dimen/dimen5dp"
                android:layout_marginBottom="@dimen/dimen20dp"
                app:cardBackgroundColor="@color/white"
                 android:id="@+id/red_card1"
                android:padding="@dimen/dimen20dp"
                app:cardCornerRadius="@dimen/dimen10dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_card_border"
                    android:padding="@dimen/dimen10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:layout_marginBottom="@dimen/dimen5dp"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/MedicalAlert"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:layout_marginBottom="@dimen/dimen5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/TextBlue"
                        android:textSize="@dimen/Text"
                        android:textStyle="bold"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/very_short_of_breath_or"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:layout_marginBottom="@dimen/dimen5dp"
                        android:drawableStart="@drawable/ic_baseline_brightness_1_24"
                        android:drawablePadding="@dimen/dimen5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/TextBlue"
                        android:textSize="@dimen/Text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen5dp"
                        android:text="@string/quick_relief_medicines_have_not_helped_cannot_do_usual_activities_or"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:drawableStart="@drawable/ic_baseline_brightness_1_24"
                        android:drawablePadding="@dimen/dimen5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/TextBlue"
                        android:textSize="@dimen/Text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen5dp"
                        android:text="@string/symptoms_are_same_or_got_worse_after_24_hours_in_yellow_zone"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        android:drawableStart="@drawable/ic_baseline_brightness_1_24"
                        android:drawablePadding="@dimen/dimen5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/TextBlue"
                        android:textSize="@dimen/Text" />



                </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>


    </ScrollView>


</LinearLayout>