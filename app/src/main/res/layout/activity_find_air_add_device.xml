<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Front_End.UI.FindAirAddDevice">

    <include layout="@layout/toolbar"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen2dp"
        android:background="@color/divider"
        android:backgroundTint="@color/divider"/>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/PleasechoosethetypeofFindAirONEdevicethatyouwanttoconnectwith"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="@dimen/dimen20dp"
        android:layout_marginTop="@dimen/dimen30dp"
        android:textSize="@dimen/HeadingText">
    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/FindAirDeviceBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen15dp"
        android:layout_marginLeft="@dimen/dimen5dp"
        android:layout_marginRight="@dimen/dimen5dp"
        android:layout_marginBottom="@dimen/dimen5dp"
        android:layout_marginTop="@dimen/dimen20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen20dp"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:layout_width="@dimen/dimen0dp"
                    android:layout_height="match_parent"
                    android:text="@string/FindAirONE"
                    android:textColor="@color/Textblack"
                    android:textSize="@dimen/HeadingText"
                    android:layout_weight="1.2"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:layout_marginTop="@dimen/dimen5dp"/>


                <ImageView
                    android:layout_width="@dimen/dimen0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:src="@drawable/blueimgdevice"
                    android:layout_weight="1"
                    android:padding="@dimen/dimen5dp"
                    />

            </LinearLayout>







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="@dimen/dimen0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Foruswithyourmedication"
                    android:textColor="@color/Textblack"
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen20dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="@dimen/dimen0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Blue"
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:textColor="@color/TextBlue"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/ParingstatusBlue"
                    android:layout_width="@dimen/dimen0dp"
                    android:layout_height="wrap_content"
                    android:text="Not paired yet"
                    android:gravity="end"
                    android:layout_marginRight="@dimen/dimen30dp"
                    android:textColor="@color/Textblack"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/FindAirDeviceRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen15dp"
        android:layout_marginLeft="@dimen/dimen5dp"
        android:layout_marginRight="@dimen/dimen5dp"
        android:layout_marginBottom="@dimen/dimen5dp"
        android:layout_marginTop="@dimen/dimen20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen20dp"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:layout_width="@dimen/dimen0dp"
                    android:layout_height="match_parent"
                    android:text="@string/FindAirONE"
                    android:textColor="@color/Textblack"
                    android:textSize="@dimen/HeadingText"
                    android:layout_weight="1.2"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:layout_marginTop="@dimen/dimen5dp"/>


                <ImageView
                    android:layout_width="@dimen/dimen0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:src="@drawable/redimgdevice"
                    android:layout_weight="1"
                    android:padding="@dimen/dimen5dp"
                    />

            </LinearLayout>







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="@dimen/dimen0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Foruswithyourmedication"
                    android:textColor="@color/Textblack"
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen20dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="@dimen/dimen0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Red"
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:textColor="@color/text_red"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/ParingstatusforRed"
                    android:layout_width="@dimen/dimen0dp"
                    android:layout_height="wrap_content"
                    android:text="Not paired yet"
                    android:gravity="end"
                    android:layout_marginRight="@dimen/dimen30dp"
                    android:textColor="@color/Textblack"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>