            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginLeft="@dimen/dimen10dp"
                android:layout_marginRight="@dimen/dimen15dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/currentwethercard"
                    android:layout_width="@dimen/dimen100dp"
                    android:layout_height="@dimen/dimen70dp"
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:layout_marginRight="@dimen/dimen5dp"
                    android:layout_marginBottom="@dimen/dimen5dp"
                    app:cardCornerRadius="@dimen/dimen15dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/btncurrentwether"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen5dp"
                        android:layout_gravity="center"
                        android:paddingBottom="@dimen/dimen2dp"
                        android:src="@drawable/ic_weather" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="bottom|center"
                        android:padding="@dimen/dimen2dp"
                        android:text="@string/Weather"
                        android:textColor="@color/Textblack"
                        android:textSize="@dimen/dimen12sp"
                        android:textStyle="bold">

                    </TextView>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/current_Air_Quality"
                    android:layout_width="@dimen/dimen100dp"
                    android:layout_height="@dimen/dimen70dp"
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:layout_marginRight="@dimen/dimen5dp"
                    android:layout_marginBottom="@dimen/dimen5dp"
