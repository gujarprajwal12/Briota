<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E3E8"
    android:orientation="vertical"
    tools:context=".Front_End.UI.HomeActivity">

    <include layout="@layout/dashbordtoolbar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/daily_zone_card"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen20dp"
                android:layout_marginTop="@dimen/dimen20dp"
                android:layout_marginRight="@dimen/dimen20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dimen10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="left"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen20dp"
                        android:layout_marginLeft="@dimen/dimen20dp"
                        android:layout_marginBottom="@dimen/dimen10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/personLogo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/person" />

                        <TextView
                            android:id="@+id/person_greeting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dimen10dp"
                            android:layout_toRightOf="@id/personLogo"
                            android:paddingRight="@dimen/dimen2dp"
                            android:text="@string/good_morning_Frank"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="@color/Textblack"
                            android:textSize="@dimen/HeadingText" />

                        <TextView
                            android:id="@+id/person_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dimen10dp"
                            android:layout_toRightOf="@id/person_greeting"
                            android:text=" Frank"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="@color/Textblack"
                            android:textSize="@dimen/HeadingText" />


                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dimen15dp"
                        android:layout_marginTop="@dimen/dimen1dp"
                        android:layout_marginRight="@dimen/dimen15dp"
                        android:layout_marginBottom="@dimen/dimen5dp"
                        android:background="@color/divider" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">


                        <TextView
                            android:id="@+id/textaddyourdailyzone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen20dp"
                            android:layout_marginTop="@dimen/dimen10dp"
                            android:gravity="center_horizontal"
                            android:text="@string/my_daily_zone"
                            android:textColor="@color/TextBlue"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/zone_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen10dp"
                            android:layout_marginTop="@dimen/dimen2dp"
                            android:layout_toRightOf="@id/textaddyourdailyzone"
                            android:src="@drawable/forwoaredarrow1" />

                    </RelativeLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/allactionplan_card"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen20dp"
                android:layout_marginTop="@dimen/dimen20dp"
                android:layout_marginRight="@dimen/dimen20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dimen10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dimen20dp"
                        android:layout_marginRight="@dimen/dimen40dp">

                        <ImageView
                            android:id="@+id/icon_Notebook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen10dp"

                            android:layout_marginRight="@dimen/dimen30dp"
                            android:layout_marginTop="@dimen/dimen10dp"
                            android:src="@drawable/myactionnootbook" />


                        <TextView
                            android:id="@+id/All_Action_Plans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_toRightOf="@id/icon_Notebook"
                            android:text="@string/no_action_plan_added_yet"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="@color/Textblack"
                            android:textSize="@dimen/HeadingText" />


                        <TextView
                            android:id="@+id/creator_dash_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/All_Action_Plans"
                            android:layout_marginLeft="@dimen/dimen70dp"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:text=""
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="@color/Textblack"
                            android:textSize="@dimen/Text" />

                        <TextView
                            android:id="@+id/creator_dash_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/All_Action_Plans"
                            android:layout_marginLeft="@dimen/dimen10dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="@dimen/dimen2dp"
                            android:layout_toRightOf="@id/creator_dash_date"
                            android:text=""
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="@color/Textblack"
                            android:textSize="13sp" />



                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dimen15dp"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:layout_marginRight="@dimen/dimen15dp"
                        android:layout_marginBottom="@dimen/dimen5dp"
                        android:background="@color/divider" />




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen70dp"
                        android:gravity="center"
                        android:background="@android:color/white"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        >


                        <Button
                            android:id="@+id/btngreen"
                            android:layout_width="@dimen/dimen0dp"
                            android:layout_height="match_parent"
                            android:text="@string/green"
                            android:textSize="@dimen/SmallText"
                            android:backgroundTint="@color/text_green"
                            android:background="@drawable/but_green"
                            android:layout_margin="@dimen/dimen15dp"
                            android:layout_weight="1"/>

                        <Button
                            android:id="@+id/btnyellow"
                            android:layout_width="@dimen/dimen0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/yellow"
                            android:textSize="@dimen/SmallText"
                            android:layout_margin="@dimen/dimen15dp"
                            android:background="@drawable/but_green"
                            android:backgroundTint="@color/text_yellow"
                            android:layout_weight="1"/>


                        <Button
                            android:id="@+id/btnred"
                            android:layout_width="@dimen/dimen0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/Red"
                            android:textSize="@dimen/SmallText"
                            android:backgroundTint="@color/text_red"
                            android:layout_margin="@dimen/dimen15dp"
                            android:background="@drawable/but_green"
                            android:layout_weight="1"/>


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen20dp"
                android:layout_marginTop="@dimen/dimen20dp"
                android:layout_marginRight="@dimen/dimen20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dimen10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:layout_marginBottom="@dimen/dimen5dp"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dimen5dp"
                        android:layout_marginRight="@dimen/dimen40dp">

                        <ImageView
                            android:id="@+id/icon_Tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen40dp"
                            android:layout_marginRight="@dimen/dimen10dp"
                            android:src="@drawable/icon_tips" />

                        <TextView
                            android:id="@+id/Daily_Tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_toEndOf="@id/icon_Tips"
                            android:text="@string/daily_tips"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="@color/Textblack"
                            android:textSize="@dimen/HeadingText" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dimen15dp"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:layout_marginRight="@dimen/dimen15dp"
                        android:layout_marginBottom="@dimen/dimen5dp"
                        android:background="@color/divider" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wear_weather_appropriate_clothing"
                        android:layout_marginLeft="@dimen/dimen20dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/TextBlue"
                        android:drawableStart="@drawable/ic_baseline_brightness_1_24"
                        android:drawablePadding="@dimen/dimen10dp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:textSize="13sp"
                        android:layout_marginRight="@dimen/dimen30dp"/>





                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen20dp"
                        android:text="@string/take_your_preventor_inhaler_with_you"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/TextBlue"
                        android:drawableStart="@drawable/ic_baseline_brightness_1_24"
                        android:drawablePadding="@dimen/dimen10dp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:textSize="13sp"
                        android:layout_marginRight="@dimen/dimen30dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen20dp"
                android:layout_marginTop="@dimen/dimen20dp"
                android:layout_marginRight="@dimen/dimen20dp"
                app:cardBackgroundColor="@color/white"
                android:id="@+id/linearLayout"
                app:cardCornerRadius="@dimen/dimen10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:layout_marginBottom="@dimen/dimen5dp"
                    android:background="@android:color/white"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Current Location in Latitude and Longitude:"
                        android:textAlignment="center"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textIsSelectable="true"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/latitudeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textIsSelectable="true"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/longitudeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textIsSelectable="true"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


