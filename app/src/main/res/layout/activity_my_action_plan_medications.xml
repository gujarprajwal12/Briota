<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingRight="@dimen/dimen5dp"
    android:paddingTop="@dimen/dimen5dp"
    android:paddingBottom="@dimen/dimen5dp"
    android:paddingLeft="@dimen/dimen5dp"
    tools:context=".Front_End.UI.MyActionPlanMedicationsActivity">

    <include layout="@layout/toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen2dp"
        android:background="@color/divider"
        android:backgroundTint="@color/divider"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen10dp"
                android:layout_marginRight="@dimen/dimen10dp"
                android:background="@color/white"
                android:visibility="visible"
                android:orientation="vertical">


                <TextView
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:text="@string/Select_Zone"
                    android:textColor="@color/Textblack"
                    android:textSize="@dimen/Text"
                    android:layout_marginBottom="@dimen/dimen10dp"
                    >

                </TextView>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen40dp"
                    android:orientation="horizontal"
                    android:weightSum="3">


                    <RadioGroup
                            android:id="@+id/rg_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen20dp"
                            >

                            <RadioButton
                                android:id="@+id/btn_Radio_green"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/TextBlue"
                                android:text="@string/green"
                                android:textStyle="bold"
                                android:textColor="@color/Textblack"
                                android:textSize="@dimen/Text" />

                        </RadioGroup>



                    <RadioGroup
                            android:id="@+id/rg_yellow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen20dp"
                        >

                            <RadioButton
                                android:id="@+id/btn_Radio_yellow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/TextBlue"
                                android:text="@string/yellow"
                                android:textStyle="bold"
                                android:textColor="@color/Textblack"
                                android:textSize="@dimen/Text" />

                        </RadioGroup>


                    <RadioGroup
                        android:id="@+id/rg_Red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen20dp"
                        >

                        <RadioButton
                            android:id="@+id/btn_Radio_Red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/TextBlue"
                            android:text="@string/Red"
                            android:textStyle="bold"
                            android:textColor="@color/Textblack"
                            android:textSize="@dimen/Text" />

                    </RadioGroup>



            </LinearLayout>



                <TextView
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:text="@string/select_medication_Type"
                    android:textColor="@color/Textblack"
                    android:textSize="@dimen/Text"
                    android:layout_marginBottom="@dimen/dimen10dp"/>

                <LinearLayout
                    android:id="@+id/greenyellow"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen40dp"
                    android:orientation="horizontal"
                    android:weightSum="3">


                    <RadioGroup
                        android:id="@+id/rg_Daily"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen20dp"
                        >

                        <RadioButton
                            android:id="@+id/btn_Radio_Daily"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/TextBlue"
                            android:text="@string/daily"
                            android:textStyle="bold"
                            android:textColor="@color/Textblack"
                            android:textSize="@dimen/Text" />

                    </RadioGroup>



                    <RadioGroup
                        android:id="@+id/rg_Rescue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen20dp"
                        >

                        <RadioButton
                            android:id="@+id/btn_Radio_Rescue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/TextBlue"
                            android:text="@string/rescue"
                            android:textStyle="bold"
                            android:textColor="@color/Textblack"
                            android:textSize="@dimen/Text" />

                    </RadioGroup>


                    <RadioGroup
                        android:id="@+id/rg_Corticosteroid_tablet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen20dp"
                        >

                        <RadioButton
                            android:id="@+id/btn_Radio_Corticosteroid_tablet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/TextBlue"
                            android:text="@string/oral_Corticosteroid_tablet"
                            android:textStyle="bold"
                            android:textColor="@color/Textblack"
                            android:textSize="@dimen/Text" />

                    </RadioGroup>



                </LinearLayout>







                <LinearLayout
                    android:id="@+id/redzone"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen40dp"
                    android:orientation="horizontal"
                    android:weightSum="3">



                    <RadioGroup
                        android:id="@+id/rg_rescue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        >

                        <RadioButton
                            android:id="@+id/btn_Radio_rescue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/TextBlue"
                            android:text="@string/rescue"
                            android:textStyle="bold"
                            android:textColor="@color/Textblack"
                            android:textSize="@dimen/Text" />

                    </RadioGroup>


                    <RadioGroup
                        android:id="@+id/rg_oral_Corticosteroid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen10dp"
                        >

                        <RadioButton
                            android:id="@+id/btn_Radio_oral_Corticosteroid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/TextBlue"
                            android:text="@string/oral_Corticosteroid_tablet"
                            android:textStyle="bold"
                            android:textColor="@color/Textblack"
                            android:textSize="@dimen/Text" />

                    </RadioGroup>








                </LinearLayout>






                <TextView
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:text="@string/enter_medicine_name"
                    android:textColor="@color/Textblack"
                    android:textSize="@dimen/Text">

                </TextView>


                <EditText
                    android:id="@+id/Enter_Medicine_Name_green_zone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen51dp"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:layout_marginBottom="@dimen/dimen5dp"
                    android:background="@drawable/edit_text_selector"
                    android:focusable="true"
                    android:hint="@string/enter"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/dimen15dp"
                    android:textColor="@color/Textblack"
                    android:textColorHint="@color/Placeholder" />


                <TextView
                    android:id="@+id/texpuff"
                    android:visibility="visible"
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:text="@string/enter_number_of_puffs"
                    android:textColor="@color/Textblack"
                    android:textSize="@dimen/Text">

                </TextView>

                <TextView
                    android:id="@+id/textmg"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:text="@string/enter_Number_Dose"
                    android:textColor="@color/Textblack"
                    android:textSize="@dimen/Text">

                </TextView>


                <EditText
                    android:id="@+id/editenter_number_of_puffs_green_zone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen51dp"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:layout_marginBottom="@dimen/dimen10dp"
                    android:background="@drawable/edit_text_selector"
                    android:focusable="true"
                    android:hint="@string/enter"
                    android:inputType="numberDecimal"
                    android:paddingLeft="@dimen/dimen15dp"
                    android:textColor="@color/Textblack"
                    android:textColorHint="@color/Placeholder" />




                <TextView
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:text="@string/when_to_take"
                    android:textColor="@color/Textblack"
                    android:textSize="@dimen/Text">

                </TextView>


                 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >


        <CheckBox
            android:id="@+id/Morning_checkBox_green_zoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10dp"
            android:buttonTint="@color/TextBlue"
            android:text="@string/morning"
            android:layout_weight=".7"
            android:gravity="center_vertical"
            android:textColor="@color/Textblack"
            />

        <CheckBox
            android:id="@+id/Afternoon_checkBox_grren_zoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dimen30dp"
            android:layout_marginTop="@dimen/dimen10dp"
            android:buttonTint="@color/TextBlue"
            android:text="@string/Afternoon"
            android:gravity="center_vertical"
            android:textColor="@color/Textblack"
            />

    </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >


                    <CheckBox
                        android:id="@+id/Evening_checkBox_green_zone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:buttonTint="@color/TextBlue"
                        android:text="@string/Evening"
                        android:layout_weight=".6"
                        android:textColor="@color/Textblack"
                        />

                    <CheckBox
                        android:id="@+id/Night_checkBox_green_zone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen30dp"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:buttonTint="@color/TextBlue"
                        android:text="@string/Night"
                        android:gravity="center_vertical"
                        android:textColor="@color/Textblack"
                        />

                </LinearLayout>




                <Button
                    android:id="@+id/btnsaveactionplan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen45dp"
                    android:layout_marginTop="@dimen/dimen30dp"
                    android:background="@drawable/buttonshape"
                    android:text="@string/Save"
                    android:layout_marginLeft="@dimen/dimen5dp"
                    android:layout_marginRight="@dimen/dimen5dp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/Button_Background"
                    android:textColor="@color/white" />


            </LinearLayout>








        </LinearLayout>



    </ScrollView>



</LinearLayout>