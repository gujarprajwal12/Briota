<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:gravity="center"
    android:layout_height="150dp">


    <LinearLayout
        android:background="@drawable/dialog_box"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="@dimen/dimen5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen5dp"
                android:gravity="center"
                android:text="Are you sure"
                android:layout_marginBottom="@dimen/dimen10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_weight="1.7"
                android:id="@+id/tv_alert" />

            <ImageView
                android:id="@+id/can_langDialog"
                android:layout_width="@dimen/dimen0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:src="@drawable/error"
                android:paddingRight="@dimen/dimen5dp"
                android:layout_marginTop="@dimen/dimen10dp"/>


        </LinearLayout>






        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen2dp"
            android:layout_marginLeft="@dimen/dimen5dp"
            android:layout_marginRight="@dimen/dimen5dp"
            android:background="@color/faint_gray" />




        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="@dimen/dimen100dp"
                android:id="@+id/butNO"
                android:text="@string/english"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:layout_marginRight="@dimen/dimen10dp"
                android:layout_marginLeft="@dimen/dimen10dp"
                android:background="@drawable/but_decline"
                android:layout_height="@dimen/dimen31dp">

            </Button>
            <Button
                android:layout_width="@dimen/dimen100dp"
                android:id="@+id/butYEs"
                android:textAllCaps="false"
                android:text="@string/danish"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/dimen10dp"
                android:layout_marginLeft="@dimen/dimen10dp"
                android:background="@drawable/but_decline"
                android:layout_height="@dimen/dimen31dp">

            </Button>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>