<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/creator_card"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen20dp"
        android:layout_marginTop="@dimen/dimen20dp"
        android:layout_marginRight="@dimen/dimen20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen20dp"
                android:layout_marginRight="@dimen/dimen40dp">

                <ImageView
                    android:id="@+id/icon_Notebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:layout_marginRight="@dimen/dimen30dp"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:src="@drawable/myactionnootbook" />

                <TextView
                    android:id="@+id/creator_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/icon_Notebook"
                    android:text="@string/created_by_myself"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/Textblack"
                    android:textSize="@dimen/HeadingText" />


                <TextView
                    android:id="@+id/creator_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/creator_name"
                    android:layout_marginLeft="@dimen/dimen70dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="@string/created_by_myself"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/Textblack"
                    android:textSize="@dimen/Text" />

                <TextView
                    android:id="@+id/creator_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/creator_name"
                    android:layout_marginLeft="@dimen/dimen10dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/creator_date"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/Textblack"
                    android:textSize="13sp" />



            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dimen15dp"
                android:layout_marginTop="@dimen/dimen20dp"
                android:layout_marginRight="@dimen/dimen15dp"
                android:layout_marginBottom="@dimen/dimen10dp"
                android:background="@color/divider" />




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen70dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:weightSum="3"
                >


                <Button
                    android:id="@+id/btngreenuser"
                    android:layout_width="@dimen/dimen100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/green"
                    android:textSize="@dimen/SmallText"
                    android:paddingBottom="5sp"
                    android:background="@drawable/green_bg" />

                <Button
                    android:id="@+id/btnyellowuser"
                    android:layout_width="@dimen/dimen100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/yellow"
                    android:textSize="@dimen/SmallText"
                    android:paddingBottom="5sp"
                    android:background="@drawable/yellowbuttn" />


                <Button
                    android:id="@+id/btnreduser"
                    android:layout_width="@dimen/dimen100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Red"
                    android:paddingBottom="5sp"
                    android:textSize="@dimen/SmallText"
                    android:background="@drawable/redbuttn" />


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>