<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:paddingRight="@dimen/dimen5dp"
    android:paddingBottom="@dimen/dimen5dp"
    android:paddingTop="@dimen/dimen5dp"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/back_tolayout"
                android:layout_width="@dimen/dimen0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:gravity="center_vertical"
                android:layout_gravity="start">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:src="@drawable/arrow" />

                <TextView
                    android:id="@+id/Back"
                    android:layout_width="63dp"
                    android:layout_height="match_parent"
                    android:text="@string/back"
                    android:paddingStart="@dimen/dimen10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/TextBlue"
                    android:textStyle="bold"
                    android:textSize="@dimen/Text" />


            </LinearLayout>

            <TextView
                android:id="@+id/diary_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dimen2dp"
                android:text=""
                android:textSize="@dimen/HeadingText"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/Textblack"
                android:textStyle="bold"
                android:layout_weight="1.4"
                android:singleLine="true"/>

            <ImageView
                android:visibility="gone"
                android:layout_width="@dimen/dimen0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_cal"/>


        </LinearLayout>





    </androidx.appcompat.widget.Toolbar>


</LinearLayout>